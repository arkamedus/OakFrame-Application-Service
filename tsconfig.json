{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir" :"dist",
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["index.ts","lib"],
  "files": [
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/node/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "declaration": true
}
